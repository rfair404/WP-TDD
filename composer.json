{
    "name": "russellfair/wp-tdd",
    "description": "A Boilerplate WP dev setup with Unit Tests, Coding Standards, CI, docker, and other goodness.",
    "type": "project",
    "authors": [
        {
            "name": "Russell Fair",
            "email": "rfair404@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {},
    "require-dev": {
        "johnpbloch/wordpress-core-installer": "^1.0.0.2",
        "johnpbloch/wordpress": "5.1.1",
        "phpunit/phpunit": "6.0.3",
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.0.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.3",
        "wp-coding-standards/wpcs": "^0.14.1",
        "xwp/wp-dev-lib": "^1.1"
    },
    "extra": {
        "wordpress-install-dir": "web",
        "installer-paths": {
            "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
